<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeTeacherActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOME_TEACHER"
        app:layout_constraintBottom_toTopOf="@+id/btnGetSchedules"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnGetSchedules"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pedir horario"
        android:theme="@style/ButtonStyle"
        app:layout_constraintBottom_toTopOf="@+id/gridTeacher"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridTeacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:columnCount="6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGetSchedules"
        app:rowCount="7"/>

</androidx.constraintlayout.widget.ConstraintLayout>